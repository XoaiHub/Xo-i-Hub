--// Auto chọn Phone khi vào game
local Players = game:GetService("Players")
local LP = Players.LocalPlayer
local RS = game:GetService("ReplicatedStorage")

local function autoSelectPhone()
    local args = { "Phone" }
    local remote = RS:WaitForChild("Remotes"):WaitForChild("Extras"):WaitForChild("ChangeLastDevice")
    pcall(function()
        remote:FireServer(unpack(args))
        warn("[AUTO] Đã chọn thiết bị Phone.")
    end)
end

-- chạy khi spawn
LP.CharacterAdded:Connect(function()
    task.delay(1, autoSelectPhone)
end)

-- nếu đã có sẵn character thì chạy luôn
if LP.Character then
    task.delay(1, autoSelectPhone)
end
